!!!
%html
  %head
    %meta{charset: 'utf-8'}/
    %title
      Chatroom
    = csrf_meta_tags
    = csp_meta_tag
    = action_cable_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = Gon::Base.render_data
  %body
    = render 'layouts/header'
    .container
      - if notice.present?
        .alert.alert-success.my-2{:role => "alert"}
          = notice
      - if alert.present?
        .alert.alert-danger.my-2{:role => "alert"}
          = alert
      = yield
